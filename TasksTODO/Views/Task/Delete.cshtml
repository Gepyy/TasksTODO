@model TasksTODO.Models.TasksModel

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Task</h2>

<h3>Are you sure you want to delete this?</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PostDelete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="TaskID" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TaskID" class="control-label"></label>
                <input asp-for="TaskID" class="form-control" readonly asp-route-id="@Model.TaskID" />
                <span asp-validation-for="TaskID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TaskTheme" class="control-label"></label>
                <input asp-for="TaskTheme" class="form-control" readonly />
                <span asp-validation-for="TaskTheme" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" readonly />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeadLine" class="control-label"></label>
                <input asp-for="DeadLine" class="form-control" readonly />
                <span asp-validation-for="DeadLine" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-warning" />
            </div>
        </form>

    </div>
</div>
<br />
<div>
    <a asp-action="ReadTasks">Back to List</a>
</div>
